{
  "manifest_version": 2,
  "name": "My Pet",
  "description": "Pet in your browser to keep company. Prototype",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "My pet Prototype",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://learn.fullstackacademy.com/*"],
      "exclude_matches" : ["http://learn.fullstackacademy.com/login"],
      "css": ["stylesheet.css"],
      "js": ["content.js"]
    }
  ],
  "permissions" : [
    "activeTab"
  ]
}
